{
	"name": "matthewp.io",
	"description": "",
	"version": "1.0.0",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"//1": "Install git hooks. Use Cloudflare specific type definitions for remix",
		"postinstall": "husky install && remix setup cloudflare-pages",
		"//2": "Remix",
		"remix:build": "remix build",
		"remix:watch": "remix watch",
		"//3": "Cloudflare Pages",
		"worker:start": "wrangler pages dev --kv KV --proxy 3000 public",
		"//4": "TailwindCSS",
		"tailwind:_build": "tailwindcss -i app/styles/tailwind.css -o app/tailwind.css",
		"tailwind:build": "yarn run tailwind:_build --minify",
		"tailwind:dev": "yarn run tailwind:_build --watch",
		"//5": "All the things",
		"build": "yarn run generate && yarn run tailwind:build && yarn run remix:build",
		"dev": "yarn run generate && concurrently \"yarn run tailwind:dev\" \"yarn run remix:watch\" \"yarn run worker:start\"",
		"//6": "Code Generation",
		"generate": "./scripts/generate"
	},
	"dependencies": {
		"@headlessui/react": "1.4.2",
		"@heroicons/react": "1.0.5",
		"@remix-run/cloudflare-pages": "1.1.1",
		"@remix-run/react": "1.1.1",
		"@remix-run/server-runtime": "1.1.1",
		"copy-to-clipboard": "3.3.1",
		"highlight.js": "11.3.1",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"rehype-highlight": "5.0.1",
		"remark-mdx-code-meta": "1.0.0",
		"remix": "1.1.1",
		"schema-dts": "1.0.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "3.3.0",
		"@remix-run/dev": "1.1.1",
		"@remix-run/node": "1.1.1",
		"@remix-run/serve": "1.1.1",
		"@tailwindcss/aspect-ratio": "0.4.0",
		"@tailwindcss/forms": "0.4.0",
		"@tailwindcss/line-clamp": "0.3.0",
		"@tailwindcss/typography": "0.5.0",
		"@types/react": "17.0.38",
		"@types/react-dom": "17.0.11",
		"autoprefixer": "10.4.0",
		"concurrently": "6.5.1",
		"esbuild": "0.14.8",
		"husky": "7.0.4",
		"lint-staged": "12.1.4",
		"prettier": "2.5.1",
		"tailwindcss": "3.0.7",
		"typescript": "4.5.4",
		"wrangler": "pages"
	},
	"lint-staged": {
		"**/*.{js,d.ts,ts,tsx}": [
			"yarn prettier --write"
		],
		"**/*.json": [
			"yarn prettier --write"
		],
		"**/*.md": [
			"yarn prettier --write"
		]
	},
	"engines": {
		"node": ">=16.7",
		"yarn": ">=1.22.0"
	},
	"volta": {
		"node": "16.13.0",
		"yarn": "1.22.17"
	},
	"packageManager": "yarn@3.1.1"
}
